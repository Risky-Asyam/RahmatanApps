                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:id="@+id/jadwalPaket1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="29 Agustus 2023"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="5dp"/>
                                <TextView
                                    android:id="@+id/durasiPaket1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 Hari"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/bintangPaket1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⭐5"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/hargaPaket1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp30.000.000"
                                    android:fontFamily="@font/poppingbold"
                                    android:textColor="@color/red"
                                    android:layout_marginLeft="4dp"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="300dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:id="@+id/gambarpaket2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/brosurpaket"/>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:id="@+id/layoutInfoPaket2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="180dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/judulPaket2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Paket Umroh 29 Agustus 2023"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:id="@+id/jadwalPaket2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="29 Agustus 2023"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="5dp"/>
                                <TextView
                                    android:id="@+id/durasiPaket2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 Hari"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/bintangPaket2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⭐5"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/hargaPaket2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp30.000.000"
                                    android:fontFamily="@font/poppingbold"
                                    android:textColor="@color/red"
                                    android:layout_marginLeft="4dp"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="300dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:id="@+id/gambarpaket3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/brosurpaket"/>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:id="@+id/layoutInfoPaket3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="180dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/judulPaket3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Paket Umroh 29 Agustus 2023"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="12dp"
                                    android:layout_marginLeft="4dp"/>
                                <TextView
                                    android:id="@+id/jadwalPaket3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="29 Agustus 2023"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="5dp"/>
                                <TextView
                                    android:id="@+id/durasiPaket3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 Hari"
                                    android:textColor="@color/black"
                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/bintangPaket3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⭐5"
