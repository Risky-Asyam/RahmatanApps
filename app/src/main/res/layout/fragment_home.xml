                                    android:layout_gravity="bottom"
                                    android:fontFamily="@font/poppingbold"
                                    android:textSize="9dp"
                                    android:layout_marginLeft="20dp"/>
                                <TextView
                                    android:id="@+id/hargaPaket3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rp30.000.000"
                                    android:fontFamily="@font/poppingbold"
                                    android:textColor="@color/red"
                                    android:layout_marginLeft="4dp"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <!--Layout Gallery-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppingbold"
                        android:text="Gallery"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selengkapnyaGallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppingbold"
                            android:text="Selengkapnya"
                            android:textColor="@color/soft_orange"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ViewFlipper
                        android:id="@+id/view_flipper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoStart="true"
                        android:flipInterval="2000"
                        android:inAnimation="@android:anim/slide_in_left"
                        android:outAnimation="@android:anim/slide_out_right">

                        <androidx.cardview.widget.CardView
                            android:layout_width="370dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/galeri1" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="370dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/galeri2" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="370dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/galeri3" />
                        </androidx.cardview.widget.CardView>
                    </ViewFlipper>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppingbold"
                        android:text="Artikel"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selengkapnyaArtikel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppingbold"
                            android:text="Selengkapnya"
                            android:textColor="@color/soft_orange"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="100dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:id="@+id/pictArtikel"
                                android:layout_width="130dp"
                                android:layout_height="100dp"
                                android:src="@drawable/fotokabah" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/judulArtikel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ini Judul Artikel Ceritanya Bang"
                                android:textColor="@color/black"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ygPostSiapa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="by Admin"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/tglArtikel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 Sep 23"
                                android:textSize="13dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
