                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selengkapnyaPaket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppingbold"
                            android:text="Selengkapnya"
                            android:textColor="@color/soft_orange"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardLuar1"
                            android:layout_width="180dp"
                            android:layout_height="300dp"
                            android:layout_marginTop="10dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardDalam1"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:id="@+id/gambarpaket1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/brosurpaket"/>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:id="@+id/layoutInfoPaket1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="180dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/judulPaket1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Paket Umroh 29 Agustus 2023"
